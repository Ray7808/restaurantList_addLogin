<!-- search bar -->
<div class='container search-bar'>
    <div class='search-bar-outer d-flex justify-content-between align-items-center'>
        <div class='search-bar-inner'>
            <form action='/search'>
                <h4 class='mb-2'>尋找餐廳：</h4>
                <div class='input-group'>
                    <input
                        type='text'
                        name='keyword'
                        class='form-control'
                        value='{{searchedText}}'
                        placeholder='輸入餐廳、分類'
                        aria-label='Restaurant Name...'
                        value=''
                        aria-describedby='search-button'
                        required
                    />
                    <div class='input-group-append'>
                        <button class='btn btn-major' type='submit' id='search-button'><i class='fas fa-search'></i></button>
                    </div>
                </div>
            </form>
        </div>
        <div class='dropdown'>
            <a class='btn btn-major dropdown-toggle px-3' href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false'>
                Sort
            </a>
            <ul class='dropdown-menu'>
                <li><a class='dropdown-item' href='/sort/AtoZ'>A -> Z</a></li>
                <li><a class='dropdown-item' href='/sort/ZtoA'>Z -> A</a></li>
                <li><a class='dropdown-item' href='/sort/category'>類別</a></li>
                <li><a class='dropdown-item' href='/sort/location'>地區</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- restaurant list -->
<div class='container mt-5'>
    <div class='row'>
        <div class='col-md-10 col-12 mx-auto'>
            <div class='row row-cols-sm-3'>
                {{#each restaurants}}
                    {{! 秀出所有餐廳資訊 }}
                    <div>
                        <div class='card mb-1'>
                            <a href='/restaurants/{{this._id}}'>
                                <img class='card-img-top' src='{{this.image}}' alt='{{this.name}}' />
                            </a>
                            <div class='card-body p-3'>
                                <h6 class='card-title mb-1'>{{this.name}}</h6>
                                <div class='restaurant-category mb-1'>
                                    <i class='fas fa-utensils pr-2'></i>
                                    {{this.category}}
                                </div>
                            </div>
                        </div>
                        <div class='mb-3 d-flex justify-content-end'>
                            <a href='/restaurants/{{this._id}}/edit' class='text-secondary p-2'>Edit</a>
                            <a href='/restaurants/{{this._id}}' class='text-secondary p-2'>Detail</a>
                            <a href='/restaurants/{{this._id}}/delete' class='btn btn-outline-secondary m-1 p-1'>Delete</a>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>